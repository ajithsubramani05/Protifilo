    <script>
        // Data derived from Resume Source
        const portfolioItems = [
            {id:1, name:'Car Rental System', category:'project', tech:'Java, OOPS', type:'Console Application', desc:'Implemented a console-based application using OOPS principles, enabling customer management, car availability, and rental cost calculation.', link:'https://github.com/ajithsubramani05', filter: 'web', img:'https://images.unsplash.com/photo-1544620347-c4fd4a8d462c?q=80&w=1400&auto=format&fit=crop'},
            {id:2, name:'External Foodie', category:'project', tech:'HTML5, CSS3, JavaScript, JSON', type:'Web Development', desc:'Built a responsive online food ordering platform with HTML5, CSS3, JavaScript, and JSON for real-time data storage/retrieval.', link:'https://github.com/ajithsubramani05', filter: 'web', img:'https://images.unsplash.com/photo-1542831371-29b0f74f9d13?q=80&w=1400&auto=format&fit=crop'},
            {id:3, name:'Traffic Light Controller', category:'project', tech:'SystemVerilog, Verilog HDL, FSM', type:'Digital Design / HDL', desc:'Designed and simulated a traffic light controller using Verilog HDL with FSM, validated for speed and area optimization.', link:'https://github.com/ajithsubramani05', filter: 'hdl', img:'https://images.unsplash.com/photo-1507721999472-8ed4521c8232?q=80&w=1400&auto=format&fit=crop'},
            {id:4, name:'Artificial Intelligence Presentation', category:'recognition', tech:'AI, Presentation', type:'Symposium', desc:'Presented a topic on Artificial Intelligence at the Symposium held at Kongu Engineering College, Perundurai.', link:'#', filter: 'recognition', img:'https://images.unsplash.com/photo-1495052959828-56d7732d849a?q=80&w=1400&auto=format&fit=crop'},
            {id:5, name:'6G Non-Terrestrial Networks', category:'recognition', tech:'6G, Networks, Presentation', type:'Symposium', desc:'Presented a topic on 6G Non-Terrestrial Networks at the Symposium held at KPR College of Engineering, Coimbatore.', link:'#', filter: 'recognition', img:'https://images.unsplash.com/photo-1549477000-8d5983769970?q=80&w=1400&auto=format&fit=crop'}
        ];

        const grid = document.getElementById('grid');
        const chips = document.querySelectorAll('.chip');
        const modal = document.getElementById('modal');
        const closeBtn = document.getElementById('close');

        function render(list){
            grid.innerHTML = '';
            list.forEach(p => {
                const card = document.createElement('div');
                card.className = 'card';
                card.setAttribute('data-filter', p.filter);
                card.innerHTML = `
                    <img loading="lazy" src="${p.img}" alt="${p.name} image" />
                    <div class="meta">
                        <h3>${p.name}</h3>
                        <p class="muted">${p.type} • ${p.tech}</p>
                    </div>`;
                card.addEventListener('click', ()=> openModal(p));
                grid.appendChild(card);
            })
        }

        // The filter logic is modified to handle the remaining chips: web, hdl, recognition
        function filterByCategory(cat){
            document.querySelectorAll('.chip').forEach(c=>c.classList.remove('active'));
            document.querySelector(`.chip[data-filter="${cat}"]`)?.classList.add('active');
            
            // If "all" was removed, the initial render should be based on the default active chip (now 'web')
            const filteredList = portfolioItems.filter(p=> p.filter.includes(cat));
            render(filteredList);
        }

        chips.forEach(ch=>{
            ch.addEventListener('click', ()=> filterByCategory(ch.dataset.filter));
        })

        // Modal logic
        function openModal(item){
            modal.style.display='flex';
            document.getElementById('modal-title').textContent = item.name;
            document.getElementById('modal-location').textContent = item.category.charAt(0).toUpperCase() + item.category.slice(1);
            document.getElementById('modal-desc').textContent = item.desc;
            document.getElementById('modal-tech').textContent = item.tech;
            document.getElementById('modal-type').textContent = item.type;
            
            const linkButton = document.getElementById('open-link');
            linkButton.textContent = (item.link === '#') ? 'View Details' : 'View on GitHub';
            linkButton.onclick = ()=> { 
                if(item.link !== '#') window.open(item.link, '_blank'); 
            };
            
            // Set image in modal
            const imgWrap = document.getElementById('modal-img-wrap');
            imgWrap.innerHTML = `<img loading="lazy" src="${item.img}" alt="${item.name} image" />`;
        }

        closeBtn.addEventListener('click', ()=> modal.style.display='none');
        modal.addEventListener('click', (e)=>{ if(e.target===modal) modal.style.display='none' });

        // initial render (renders items with filter='web' by default)
        filterByCategory('web');
    </script>
</body>
